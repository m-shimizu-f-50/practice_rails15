<div class="container">
	<div class="row">
		<div class = "col-xs-3">
			<%= flash[:success] %>
			<%= render 'users/list',user: @user %>


		</div>

			<div class="col-xs-9">
				<h2>Users</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td>
									<%= link_to user_path(@user) do %>
									<%= attachment_image_tag user ,:profile_image, :fill,100,100,fallback: "no_image.jpg " %>
									<% end %>
								</td>
								<td>
									<%= user.name%>
								</td>
								<td>
									<%= link_to "Show", user_path(user) %>
								</td>
							</tr>

						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>



