<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg",size: "60x60"%>

	<table class="table">
		<tbody>
			<tr></tr>
				<th>name</th><td><%=user.name %></td>
			</tr>
			<tr>
			<th>introduction</th><td><%= user.introduction %></td>
			</tr>


		</tbody>

	</table>


	<%= link_to edit_user_path(user),class: "btn btn-default" do%>
	<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
	<% end %>
	<h2>New book</h2>
		<%if @book.errors.any? %>
		<div class="alert alert-warning">
		<h2><%= @book.errors.count %>error</h2>
			<ul>
				<% @book.errors.full_messages.each do |messege| %>
				<li><%= message %></li>
			</ul>
		</div>
			<% end %>
		<% end %>
		<%= form_for(@book) do |f| %>
			<h4>Title</h4>
				<%= f.text_field :title %>
			<h4>Opinion</h4>
				<%= f.text_area :body %>
				<%= f.submit 'Create Book' %>

		<% end %>