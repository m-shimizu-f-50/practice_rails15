<div class="container">
	<div class="row">
		<div class= "col-xs-3">
			<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg",size: "60x60"%>
				<table class="table">
					<tbody>
						<tr>
							<th>name</th><td><%=@user.name %></td>
						</tr>
						<tr>
							<th>introduction</th><td><%= @user.introduction %></td>
						</tr>
					</tbody>
				</table>

					<%= link_to edit_user_path(@user),class: "btn btn-default" do %>
						<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
					<% end %>

				<h2>New book</h2>
				<%if @book.errors.any? %>
					<div class="alert alert-warning">
						<h2><%= @book.errors.count %>error</h2>
						<ul>
							<% @book.errors.full_messages.each do |messege| %>
							<li><%= message %></li>
						</ul>
					</div>
				<% end %>
				<% end %>
				<%= form_for(@book) do |f| %>
					<h4>Title</h4>
						<%= f.text_field :title %>
					<h4>Opinion</h4>
						<%= f.text_area :body %>
						<%= f.submit 'Create Book' %>

				<% end %>
		</div>

		<div class = "col-xs-9">
			<h2>Books</h2>
			<table class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td>
								<%= link_to user_path(@user) do %>
									<%=attachment_image_tagã€€@user,:fill,100,100,fallback: "no_image.jpg" %>
								<% end %>
							</td>
							<td>
								<%=link_to book.title,book_path(book.id)%>
							</td>
							<td><%= book.body %></td>
						</tr>
						<%= paginate @books, class: "pagenate" %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>