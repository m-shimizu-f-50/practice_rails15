<div class="container">
	<div class="row">
		<div class= "col-xs-3">
			<%= render 'users/list',user: @user %>

		</div>

		<div class = "col-xs-9">
			<h2>Books</h2>
			<table class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td>

							</td>
							<td>
								<%=link_to book.title,book_path(book.id)%>
							</td>
							<td><%= book.body %></td>
						</tr>
						<%= paginate @books, class: "pagenate" %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>