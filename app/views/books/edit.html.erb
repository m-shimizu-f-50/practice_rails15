<h2>Editing Book</h2>

<%= form_for(@book) do |f| %>
<%if @book.errors.any? %>
		<div class="alert alert-warning">
            <h2><%= @book.errors.count %>error</h2>
			<ul>
				<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			</ul>
		</div>
		<% end %>
<% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %><br>

    <%= f.submit 'Update Book' %>
    <% end %>

    <%= link_to 'Show',book_path(@book.id)%> |
    <%= link_to 'Back',books_path %>